! Xft settings
Xft.dpi:                192
Xft.antialias:          true
Xft.autohint:           false
Xft.hinting:            fale
Xft.hintstyle:          hintfull
Xft.lcdfilter:          lcddefault
Xft.rgba:               rgb

!URxvt settings
URxvt.internalBorder:           10
URxvt.buffered:                 true
URxvt.saveLines:                12000
URxvt.scrollBar:                false
URxvt.depth:                    32
URxvt.url-launcher:             /usr/bin/xdg-open
URxvt.matcher.button:           1
URxvt.iso14755:                 False
URxvt.termName:                 rxvt-unicode-256color
URxvt.font:                     xft:source code pro for powerline:semibold:size=10:antialias=true:hinting=true, xft:SauceCodePro\ Nerd\ Font\ Mono:regular:size=10:antialias:false, xft:Font Awesome:regular:size=10:antialias=true:hinting=true
URxvt.boldFont:                 xft:source code pro for powerline:bold:size=10:antialias=true:hinting=true, xft:Font Awesome:regular:size=10:antialias=true:hinting=true
URxvt.perl-ext-common:          default,clipboard,url-select,keyboard-select,selection-to-clipboard,resize-font
URxvt.url-select.launcher:      chromium
URxvt.url-select.underline:     true
URxvt.keysym.M-u:               perl:url-select:select_next
URxvt.keysym.M-Escape:          perl:keyboard-select:activate
URxvt.keysym.M-s:               perl:keyboard-select:search
URxvt.transparent: false

URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger:  C-Up
