#include ".Xresources.d/base16-xresources/base16-flat.dark.xresources"


#define FONT1 xft:source code pro for powerline:regular:pixelsize=13:antialias=true:hinting=true, xft:Meslo\ LG\ M\ for\ Powerline:pixelsize=15, xft:Font Awesome:regular:pixelsize=13:antialias=true:hinting=true
#define FONT2 xft:source code pro for powerline:semibold:pixelsize=13:antialias=true:hinting=true, xft:Meslo\ LG\ M\ for\ Powerline:semibold:pixelsize=15, xft:Font Awesome:regular:pixelsize=13:antialias=true:hinting=true

! Xft settings
Xft.dpi:                96
Xft.antialias:          1
Xft.autohint:           0
Xft.hinting:            1
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

!URxvt settings
URxvt.internalBorder:           10
URxvt.buffered:                 false
URxvt.saveLines:                12000
URxvt.scrollBar:                false
URxvt.depth:                    32
URxvt.perl-ext-common:          vtwheel,default,clipboard,matcher,resize-font
URxvt.url-launcher:             /usr/bin/xdg-open
URxvt.matcher.button:           1
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.iso14755:                 False
URxvt.termName:                 rxvt-unicode-256color
URxvt.font:                     FONT1
URxvt.boldFont:                 FONT2

URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

! Rofi
rofi.opacity:           90
rofi.width:             100
rofi.lines:             5
rofi.font:              Source Code Pro 9
rofi.separator-style:   none
rofi.hide-scrollbar:    true
rofi.padding:           340
rofi.eh:                2
rofi.bw:                0
rofi.bc:                base0D
